<%= render partial: 'section_header', locals: {title: "Notifications - Base"} %>
<div class="slds-notify-container">
  <div class="slds-notify slds-notify--toast slds-theme--inverse-text" role="alert">
    <span class="slds-assistive-text">Info</span>
    <button class="slds-button slds-notify__close">
      <svg aria-hidden="true" class="slds-button__icon slds-button__icon--inverse">
        <use xlink:href="/assets/icons/action-sprite/svg/symbols.svg#close"></use>
      </svg>
      <span class="slds-assistive-text">Close</span>
    </button>
    <div class="notify__content">
      <h2 class="slds-text-heading--small">Base Toast</h2>
    </div>
  </div>
</div>
<!-- Margin -->
<div class="components-margin" />

