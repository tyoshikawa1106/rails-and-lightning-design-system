<div class="slds">
  <%= render partial: 'section_header', locals: {title: "Pills - Base"} %>
  <span class="slds-pill"><a href="#" class="slds-pill__label">Pill Label</a>
    <button class="slds-button slds-button--icon-bare">
      <svg aria-hidden="true" class="slds-button__icon">
        <use xlink:href="<%= asset_path 'SLDS080/assets/icons/utility-sprite/svg/symbols.svg#close' %>"></use>
      </svg>
      <span class="slds-assistive-text">Remove</span>
    </button>
  </span>
  <!-- Margin -->
  <div class="components-margin"></div>

  <%= render partial: 'section_header', locals: {title: "Pills - Unlink"} %>
  <span class="slds-pill">
    <span class="slds-pill__label">Pill Label</span>
  </span>
  <!-- Margin -->
  <div class="components-margin"></div>

  <%= render partial: 'section_header', locals: {title: "Pills - Icon"} %>
  <span class="slds-pill">
    <a href="#" class="slds-pill__label">
      <svg aria-hidden="true" class="slds-icon slds-icon-standard-account slds-icon--small">
        <use xlink:href="<%= asset_path 'SLDS080/assets/icons/standard-sprite/svg/symbols.svg#account' %>"></use>
      </svg>Pill Label</a>
    <button class="slds-button slds-button--icon-bare">
      <svg aria-hidden="true" class="slds-button__icon">
        <use xlink:href="<%= asset_path 'SLDS080/assets/icons/utility-sprite/svg/symbols.svg#close' %>"></use>
      </svg>
      <span class="slds-assistive-text">Remove</span>
    </button>
  </span>
  <!-- Margin -->
  <div class="components-margin"></div>

  <%= render partial: 'section_header', locals: {title: "Pills - Portrait"} %>
  <span class="slds-pill">
    <a href="#" class="slds-pill__label">
      <span class="slds-avatar slds-avatar--circle slds-avatar--x-small">
        <img src="<%= asset_path 'SLDS080/assets/images/avatar2.jpg' %>" alt="" />
      </span>Pill Label</a>
    <button class="slds-button slds-button--icon-bare">
      <svg aria-hidden="true" class="slds-button__icon">
        <use xlink:href="<%= asset_path 'SLDS080/assets/icons/utility-sprite/svg/symbols.svg#close' %>"></use>
      </svg>
      <span class="slds-assistive-text">Remove</span>
    </button>
  </span>
  <!-- Margin -->
  <div class="components-margin"></div>
</div>